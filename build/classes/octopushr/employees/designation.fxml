<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="315.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="octopushr.employees.DesignationController">
    <stylesheets>
        <URL value="@designation.css" />
    </stylesheets>
    <children>
        <VBox layoutX="6.0" prefHeight="394.0" prefWidth="300.0" spacing="5.0">
            <children>
                <Label prefHeight="36.0" prefWidth="286.0" />
                <Label alignment="TOP_LEFT" prefHeight="39.0" prefWidth="259.0" text="Add New Designation" textFill="#fcfafa">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="24.0" />
                    </font>
                </Label>
                <Label prefHeight="24.0" prefWidth="229.0" text="Fields marked '*' are mandatory" textFill="#d70f0f">
               <font>
                  <Font name="Arial Rounded MT Bold" size="12.0" />
               </font></Label>
                <HBox prefHeight="30.0" prefWidth="273.0">
                    <children>
                        <TextField fx:id="txtDesignationId" prefHeight="30.0" prefWidth="294.0" promptText="Designation Id">
                     <font>
                        <Font name="Arial Unicode MS" size="12.0" />
                     </font></TextField>
                    </children>
                </HBox>
            <TextField fx:id="txtDesignation" prefHeight="32.0" prefWidth="295.0" promptText="Designation">
               <font>
                  <Font name="Arial Unicode MS" size="12.0" />
               </font>
            </TextField>
                <TextArea fx:id="txtDesignationdescription" prefHeight="124.0" prefWidth="262.0" promptText="Description...">
               <font>
                  <Font name="Arial Unicode MS" size="12.0" />
               </font></TextArea>
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addDesignation" prefHeight="28.0" prefWidth="295.0" text="ADD">
               <font>
                  <Font name="Arial Rounded MT Bold" size="12.0" />
               </font></Button>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closeThisStage" prefHeight="28.0" prefWidth="295.0" text="CLOSE">
               <font>
                  <Font name="Arial Rounded MT Bold" size="12.0" />
               </font></Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets left="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
