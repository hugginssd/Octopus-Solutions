    <stylesheets>
        <URL value="@/resources/css/employeeprofile.css" />
    </stylesheets>
   <children>
      <VBox layoutX="-1.0" prefHeight="128.0" prefWidth="451.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="503.0" text="View Employee Profile" textFill="#fcfcfc">
               <font>
                  <Font name="Arial Rounded MT Bold" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cmbSelectDepartment" prefHeight="44.0" prefWidth="344.0" promptText="-----------Select Department------------" />
            <HBox prefHeight="44.0" prefWidth="490.0" spacing="10.0">
               <children>
                  <ComboBox fx:id="cmbSelectEmployee" editable="true" prefHeight="38.0" prefWidth="345.0" promptText="Select Employee">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#search" prefHeight="40.0" prefWidth="82.0" text="Search">
